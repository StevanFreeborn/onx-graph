{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vue Client - Docker",
      "request": "launch",
      "type": "msedge",
      "webRoot": "${workspaceFolder}/client",
      "url": "http://localhost:3001"
    },
    {
      "name": "Server API - Docker",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
          "pipeProgram": "docker",
          "pipeArgs": [ "exec", "-i", "server-api-development" ],
          "debuggerPath": "/root/vsdbg/vsdbg",
          "pipeCwd": "${workspaceRoot}",
          "quoteArgs": false
      },
      "sourceFileMap": {
          "/app": "${workspaceRoot}/server/Server.API/"
      }
    },
    {
      "name": "Vue Client",
      "request": "launch",
      "type": "msedge",
      "webRoot": "${workspaceFolder}/client",
      "preLaunchTask": "startclient",
      "url": "https://localhost:5173"
    },
    {
      "name": "Server API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/server/Server.API/bin/Debug/net8.0/Server.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/server/Server.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "App",
      "configurations": ["Server API", "Vue Client"]
    },
    {
      "name": "Dockerized App",
      "configurations": ["Vue Client - Docker", "Server API - Docker"]
    }
  ]
}
